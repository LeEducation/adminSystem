{
  "editor.formatOnType": true, // 自动格式化代码
  "editor.formatOnSave": true, // 保存时自动格式化代码
  "[vue]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode" // Vue文件默认格式化工具为Prettier
  },
  "editor.tabSize": 2, // 制表符大小为2个空格
  "editor.formatOnPaste": true, // 粘贴时自动格式化代码
  "editor.guides.bracketPairs": "active", // 高亮匹配的括号对
  "files.autoSave": "afterDelay", // 自动保存文件（延迟一段时间后）
  "git.confirmSync": false, // Git同步时不弹出确认对话框
  "workbench.startupEditor": "newUntitledFile", // 启动编辑器时打开新未命名文件
  "editor.suggestSelection": "first", // 在代码建议中首选第一个
  "editor.acceptSuggestionOnCommitCharacter": false, // 不在按下提交字符时接受建议
  "css.lint.propertyIgnoredDueToDisplay": "ignore", // 忽略与display属性相关的CSS错误
  "editor.quickSuggestions": {
    "other": true,
    "comments": true,
    "strings": true
  }, // 启用快速建议，包括其他代码、注释和字符串
  "files.associations": {
    "editor.snippetSuggestions": "top"
  }, // 将代码片段建议排在建议列表的顶部
  "[css]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode" // CSS文件默认格式化工具为Prettier
  },
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": true // 保存时执行ESLint的修复操作
  },
  "iconify.excludes": ["el"] // 排除特定图标以免显示在图标选择器中
}
